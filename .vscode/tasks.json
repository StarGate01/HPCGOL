{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Local: Build All",
            "type": "shell",
            "command": "./build.sh",
            "problemMatcher": {
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": [
                    {
                        "regexp": "^([^\\s].*):(\\d+):(\\d+):$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                    },
                    {
                        "regexp": "^.*$",
                    },
                    {
                        "regexp": "^\\s+(.*)$",
                        "code": 1
                    },
                    {
                        "regexp": "^.*$",
                    },
                    {
                        "regexp": "^(Warning|Error):\\s+(.*)$",
                        "severity": 1,
                        "message": 2
                    }
                ],
                "source": "compiler ",
                "applyTo": "allDocuments"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Local: Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Local: Run Simple",
            "type": "shell",
            "command": "./bin/simple",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run OpenMP Tst",
            "type": "shell",
            "command": "./bin/omptest",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run MPI Test",
            "type": "shell",
            "command": "./bin/mpitest",
            "problemMatcher": [],
            "group": "test"
        },
    
    ]
}