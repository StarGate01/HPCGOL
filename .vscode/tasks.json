{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Local: Build All",
            "type": "shell",
            "command": "make all",
            "problemMatcher": {
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": [
                    {
                        "regexp": "^([^\\s].*):(\\d+):(\\d+):$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                    },
                    {
                        "regexp": "^.*$",
                    },
                    {
                        "regexp": "^\\s+(.*)$",
                        "code": 1
                    },
                    {
                        "regexp": "^.*$",
                    },
                    {
                        "regexp": "^(Warning|Error):\\s+(.*)$",
                        "severity": 1,
                        "message": 2
                    }
                ],
                "source": "compiler ",
                "applyTo": "allDocuments"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Local: Install dependencies",
            "type": "shell",
            "command": "make deps",
            "problemMatcher": []
        },
        {
            "label": "Local: Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "Local: Run Simple with graphics",
            "type": "shell",
            "command": "make run EXE=simple ARG_STEPS=15 ARG_PRINT=1 ARG_WIDTH=10 ARG_HEIGHT=10",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run Simple",
            "type": "shell",
            "command": "make run EXE=simple",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run Simple optimized",
            "type": "shell",
            "command": "make run EXE=simple_opt",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run Simple SIMD",
            "type": "shell",
            "command": "make run EXE=simple_simd",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run Simple SIMD 2",
            "type": "shell",
            "command": "make run EXE=simple_simd2",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run Multithreaded",
            "type": "shell",
            "command": "make run EXE=threads ARG_THREADS=8",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run Multi-CPU",
            "type": "shell",
            "command": "make run EXE=nodes ARG_THREADS=4 ARG_NODES=2",
            "problemMatcher": [],
            "group": "test"
        },
        {
            "label": "Local: Run Hybrid",
            "type": "shell",
            "command": "make run EXE=hybrid ARG_THREADS=4 ARG_NODES=2",
            "problemMatcher": [],
            "group": "test"
        },
    ]
}